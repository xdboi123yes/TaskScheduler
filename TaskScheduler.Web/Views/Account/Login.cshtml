@model global::TaskScheduler.Web.ViewModels.Account.LoginViewModel
@{
    Layout = null; // Bu sayfanın bir layout'u yok, kendi başına tam bir sayfa.
    ViewData["Title"] = "Giriş Yap";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Görev Planlama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #f8f9fa;
        }
        .login-card {
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body>

<div class="card shadow-sm login-card">
    <div class="card-body p-5">
        <h3 class="card-title text-center mb-4">Sisteme Giriş</h3>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı">
                <label asp-for="Username"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Şifre">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>