@model InitialAdminSetupViewModel
@{
    Layout = null;
    ViewData["Title"] = "İlk Admin Kurulumu";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Görev Planlama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { display: flex; align-items: center; justify-content: center; height: 100vh; background-color: #f8f9fa; }
        .setup-card { max-width: 450px; width: 100%; }
    </style>
</head>
<body>
<div class="card shadow-sm setup-card">
    <div class="card-body p-5">
        <h3 class="card-title text-center mb-2">İlk Yönetici Hesabı</h3>
        <p class="text-center text-muted mb-4">Sistemi kullanmaya başlamak için ilk yönetici hesabını oluşturun.</p>
        <form asp-action="InitialAdminSetup" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Admin Kullanıcı Adı">
                <label asp-for="Username"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Şifre">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar">
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Hesabı Oluştur</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>