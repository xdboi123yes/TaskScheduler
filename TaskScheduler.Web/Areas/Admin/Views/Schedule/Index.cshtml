@model ScheduleIndexViewModel

@{
    ViewData["Title"] = "Haftalık Plan";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row">
    <!-- YENİ PLAN OLUŞTURMA FORMU -->
    <div class="col-12 col-lg-3">
        <h4>Yeni Plan Oluştur</h4>
        <div class="card">
            <div class="card-body">
                <form asp-action="Generate" method="post">
                    <p class="card-text">Çalışılacak günleri seçerek yeni bir haftalık görev planı oluşturun.</p>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="GenerateViewModel.Monday">
                        <label class="form-check-label" asp-for="GenerateViewModel.Monday">Pazartesi</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="GenerateViewModel.Tuesday">
                        <label class="form-check-label" asp-for="GenerateViewModel.Tuesday">Salı</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="GenerateViewModel.Wednesday">
                        <label class="form-check-label" asp-for="GenerateViewModel.Wednesday">Çarşamba</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="GenerateViewModel.Thursday">
                        <label class="form-check-label" asp-for="GenerateViewModel.Thursday">Perşembe</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="GenerateViewModel.Friday">
                        <label class="form-check-label" asp-for="GenerateViewModel.Friday">Cuma</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="GenerateViewModel.Saturday">
                        <label class="form-check-label" asp-for="GenerateViewModel.Saturday">Cumartesi</label>
                    </div>
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">Planı Oluştur</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- HAFTALIK PLAN GÖRÜNÜMÜ -->
    <div class="col-12 col-lg-9 mt-4 mt-lg-0">
        <h4>Mevcut Plan
            @if (Model.CurrentSchedule != null)
            {
                <small class="text-muted fs-6">(@Model.CurrentSchedule.WeekStartDate.ToString("dd MMMM yyyy") Haftası)</small>
            }
        </h4>
        @if (Model.CurrentSchedule == null || !Model.CurrentSchedule.ScheduledTasks.Any())
        {
            <div class="alert alert-info">Görüntülenecek bir plan bulunmuyor. Lütfen yeni bir plan oluşturun.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th style="width: 15%;">Personel</th>
                            @foreach (var day in Model.DaysOfWeek)
                            {
                                <th style="width: 14%;">@day.Value</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var personnel in Model.PersonnelList.OrderBy(p => p.FirstName))
                        {
                            <tr>
                                <td>@personnel.FirstName @personnel.LastName</td>
                                @foreach (var day in Model.DaysOfWeek)
                                {
                                    var taskForDay = Model.CurrentSchedule.ScheduledTasks
                                        .FirstOrDefault(st => st.PersonnelId == personnel.Id && st.DayOfWeek == day.Key);

                                    <td>
                                        @if (taskForDay != null)
                                        {
                                            <div class="card bg-light shadow-sm h-100">
                                                <div class="card-body p-2">
                                                    <h6 class="card-title small mb-1">@taskForDay.Task.Name</h6>
                                                    <span class="badge bg-secondary">Zorluk: @taskForDay.Task.DifficultyLevel</span>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>