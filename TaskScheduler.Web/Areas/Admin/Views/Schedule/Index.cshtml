@using TaskScheduler.Entities
@model IEnumerable<WeeklySchedule>

@{
    ViewData["Title"] = "Plan Yönetimi";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <!-- YENİ PLAN OLUŞTURMA FORMU -->
    <div class="col-12 col-lg-3">
        <h4><i class="bi bi-plus-circle-fill"></i> Yeni Taslak Oluştur</h4>
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Generate" method="post">
                    <p class="card-text small text-muted">Çalışılacak günleri seçerek yeni bir haftalık görev taslağı oluşturun.</p>
                    
                    @{
                        // Controller'dan ViewModel göndermediğimiz için burada bir nesne oluşturuyoruz.
                        var generateModel = new ScheduleGenerateViewModel(); 
                    }
                    
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@generateModel.Monday" checked>
                        <label class="form-check-label" asp-for="@generateModel.Monday">Pazartesi</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@generateModel.Tuesday" checked>
                        <label class="form-check-label" asp-for="@generateModel.Tuesday">Salı</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@generateModel.Wednesday" checked>
                        <label class="form-check-label" asp-for="@generateModel.Wednesday">Çarşamba</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@generateModel.Thursday" checked>
                        <label class="form-check-label" asp-for="@generateModel.Thursday">Perşembe</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@generateModel.Friday" checked>
                        <label class="form-check-label" asp-for="@generateModel.Friday">Cuma</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@generateModel.Saturday">
                        <label class="form-check-label" asp-for="@generateModel.Saturday">Cumartesi</label>
                    </div>
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">Taslak Oluştur</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- TÜM PLANLARI LİSTELEME TABLOSU -->
    <div class="col-12 col-lg-9 mt-4 mt-lg-0">
        <h4><i class="bi bi-calendar-week"></i> Kayıtlı Planlar</h4>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Plan Adı</th>
                        <th>Hafta Başlangıcı</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center">Kayıtlı plan bulunmamaktadır.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var plan in Model)
                        {
                            <tr>
                                <td>@plan.ScheduleName</td>
                                <td>@plan.WeekStartDate.ToString("dd MMMM yyyy")</td>
                                <td>
                                    @{
                                        var statusClass = plan.Status switch {
                                            ScheduleStatus.Active => "bg-success",
                                            ScheduleStatus.Draft => "bg-warning text-dark",
                                            ScheduleStatus.Archived => "bg-secondary",
                                            _ => "bg-light text-dark"
                                        };
                                    }
                                    <span class="badge @plan.Status.GetBadgeClass()">@plan.Status.ToTurkishString()</span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-primary" title="Görüntüle">
                                        <i class="bi bi-eye"></i> Görüntüle
                                    </a>
                                    
                                    @if (plan.Status == ScheduleStatus.Draft)
                                    {
                                        <form asp-action="Approve" asp-route-id="@plan.Id" method="post" class="d-inline" onsubmit="return confirm('Bu taslağı onaylayıp aktif plan yapmak istediğinizden emin misiniz?');">
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Onayla">
                                                <i class="bi bi-check-circle"></i> Onayla
                                            </button>
                                        </form>
                                    }

                                    <!-- SİLME FORMU - ARTIK DIŞARIDA VE HER DURUM İÇİN GEÇERLİ -->
                                    <form asp-action="Delete" asp-route-id="@plan.Id" method="post" class="d-inline" onsubmit="return confirm('Bu planı ve ilgili tüm görev atamalarını kalıcı olarak silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>